<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Events"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/upload_poster_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:text="Upload Poster"
                    android:backgroundTint="#6750A4"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/remove_poster_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"
                    android:text="Remove Poster"
                    android:backgroundTint="#6750A4"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title:"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="#FCEEF6"
                android:padding="12dp"
                android:hint="Enter Event Title"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- QR Code Preview -->
            <ImageView
                android:id="@+id/organizer_event_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:contentDescription="QR Code"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:visibility="gone" /> <!-- Set visibility to gone initially -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="#FCEEF6"
                android:padding="12dp"
                android:hint="Enter Event Description"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="#FCEEF6"
                android:padding="12dp"
                android:hint="Enter Location"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Open:"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/event_registration_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Pick Registration Open Date"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date:"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/event_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Pick Due Date"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geolocation:"
                    android:textColor="#000000"
                    android:layout_centerVertical="true" />
                <Switch
                    android:id="@+id/geolocation_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:thumbTint="#6750A4"
                    android:trackTint="#E6DEFA" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limit Waitlist:"
                    android:textColor="#000000"
                    android:layout_centerVertical="true" />
                <Switch
                    android:id="@+id/limit_waitlist_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:thumbTint="#6750A4"
                    android:trackTint="#E6DEFA" />
            </RelativeLayout>

            <!-- Capacity Field -->
            <TextView
                android:id="@+id/capacity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity:"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" /> <!-- Initially hidden -->

            <EditText
                android:id="@+id/event_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="#FCEEF6"
                android:padding="12dp"
                android:hint="Enter Capacity"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"
                android:visibility="gone" /> <!-- Initially hidden -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <Button
                    android:id="@+id/create_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Create"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6750A4"
                    android:layout_marginEnd="8dp" />
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6750A4"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
