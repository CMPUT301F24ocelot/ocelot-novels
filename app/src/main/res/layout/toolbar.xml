<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toolbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#FCEEF6"
    android:elevation="4dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:titleTextColor="#000000"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Hamburger Icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_hamburger_icon"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:srcCompat="@drawable/hamburger" /> <!-- Use vector asset ic_menu -->

        <!-- Title (Center) -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="330dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Facility Profile"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_profile_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/profile" /> <!-- Use vector asset for profile icon -->
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>