<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/slateGray">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/user_event_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="3dp"/>

        <TextView
            android:id="@+id/user_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_event_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Status: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_event_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Deadline: "
            android:textSize="14sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/warning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warning: Geolocation is enabled for this event!"
            android:textColor="@color/design_default_color_error"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginTop="5dp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>