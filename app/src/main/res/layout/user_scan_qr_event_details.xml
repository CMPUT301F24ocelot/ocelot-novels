<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/slateGray"
        android:background="@drawable/rounded_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_launcher_background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:backgroundTint="@color/eventPurpleLight"
            android:background="@drawable/rounded_background">

            <TextView
                android:id="@+id/user_event_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Details"

                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginVertical="3dp"/>

            <TextView
                android:id="@+id/user_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Description: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_event_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Status: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_event_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Deadline: "
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">

            <Button
                android:id="@+id/join_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>